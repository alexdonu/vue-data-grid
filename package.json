{
  "name": "vue3-data-grid",
  "version": "0.1.0",
  "private": false,
  "description": "A modern, performant Vue 3 data grid component with TypeScript support",
  "keywords": [
    "vue",
    "vue3",
    "datagrid",
    "table",
    "typescript",
    "component"
  ],
  "author": "Alexandru Donu <donu200000@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexdonu/vue-data-grid.git"
  },
  "homepage": "https://github.com/alexdonu/vue-data-grid#readme",
  "bugs": {
    "url": "https://github.com/alexdonu/vue-data-grid/issues"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/vue-data-grid.umd.cjs",
  "module": "./dist/vue-data-grid.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue-data-grid.js",
      "require": "./dist/vue-data-grid.umd.cjs"
    }
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:lib": "vue-tsc && vite build --mode lib",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@vueuse/core": "^13.6.0",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.4",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-oxlint": "~1.8.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.8.0",
    "prettier": "3.6.2",
    "typescript": "~5.8.0",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4"
  }
}
